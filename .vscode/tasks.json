{
    "tasks": [
        {
            "label": "format",
            "type": "shell",
            "command": "poetry run isort -q .;poetry run autoflake -ri --remove-all-unused-imports .;poetry run black -q .",
            "presentation": {
                "reveal": "silent",
                "clear": true
            }
        },
        {
            "label": "ruff",
            "type": "shell",
            "command": "poetry run ruff .",
        },
        {
            "label": "pyright",
            "type": "shell",
            "command": "poetry run pyright",
        },
        {
            "label": "mypy",
            "type": "shell",
            "command": "poetry run mypy .",
            "options": {
                "cwd": "${workspaceFolder}/src/pyferret"
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "poetry run pytest",
        }
    ]
}